generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Panini {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  image        String
  description  String
  observations Observation[]
}

model Unicafe {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  description  String
  observations Observation[]
}

model Observation {
  id        Int      @id @default(autoincrement())
  time      DateTime @default(now())
  panini    Panini   @relation(fields: [paniniId], references: [id])
  paniniId  Int
  unicafe   Unicafe  @relation(fields: [unicafeId], references: [id])
  unicafeId Int
}
